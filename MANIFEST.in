# Include documentation and configuration files
include README.md
include LICENSE
include CONTRIBUTING.md
include CHANGELOG.md
include CODE_OF_CONDUCT.md
include requirements.txt
include requirements-dev.txt
include pyproject.toml
include setup.py
include MANIFEST.in
include .pre-commit-config.yaml

# Include documentation
recursive-include docs *.md *.html *.txt
recursive-include docs *.png *.jpg *.gif

# Include test data
recursive-include test_data *.csv *.xlsx

# Include source code
recursive-include src *.py

# Include tests
recursive-include tests *.py

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll

# Include GitHub templates
recursive-include .github *.md *.yml *.yaml

# Exclude development files
exclude .gitignore
exclude .editorconfig
exclude tox.ini
exclude .coverage
exclude pytest.ini
exclude build_*.py
exclude create_*.py
exclude demo_*.py
exclude test_*.py
exclude run_*.py
recursive-exclude * .pytest_cache
recursive-exclude * __pycache__
recursive-exclude * .git
recursive-exclude * .vscode
recursive-exclude * .idea